<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/recyclerRowId"
    android:layout_margin="10dp"
    android:background="#15BAF3"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_fav_custum_view_id"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/name_fav_custum_view_id"
            android:text="FullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/number_fav_custum_view_id"
            android:textSize="20sp"
            android:text="Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/trash_fav_custum_view_id"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-15dp"
            android:layout_height="40dp">
        </ImageView>

    </LinearLayout>

</LinearLayout>