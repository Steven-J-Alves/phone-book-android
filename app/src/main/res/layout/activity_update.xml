<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Update">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#03A9F4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Update"
            android:padding="10dp"
            android:background="#048DC9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/galeryPhotoIdUp"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <EditText
            android:inputType="textAutoComplete"
            android:layout_marginBottom="15dp"
            android:id="@+id/fullNameUp"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:id="@+id/phoneNumberIdUp"
            android:hint="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/emailIdUp"
            android:layout_marginBottom="15dp"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:id="@+id/birthdayIdUp"
            android:layout_marginBottom="10dp"
            android:hint="Birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_add_location_black_24dp"
            android:id="@+id/mapUpId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCancelUpdateId"
                android:text="Cancel"
                android:background="#F44336"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:id="@+id/btnUpdateId"
                android:text="Update"
                android:background="#4CAF50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>